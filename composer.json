{
    "name": "biyonik/zephyr-framework",
    "description": "Modern, minimal PHP 8.3+ API Framework optimized for shared hosting",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ahmet ALTUN",
            "email": "ahmet.altun60@gmail.com",
            "homepage": "https://github.com/biyonik"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-fileinfo": "*",
        "ext-pdo": "*",
        "firebase/php-jwt": "^6.10",
        "symfony/console": "^6.4",
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.5"

    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
        ,
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "symfony/var-dumper": "6.4.26"
    },
    "autoload": {
        "psr-4": {
            "Zephyr\\": "src/",
            "App\\": "app/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
