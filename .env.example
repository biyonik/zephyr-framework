# Application
APP_NAME="Zephyr Framework"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Europe/Istanbul

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=zephyr
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGO=HS256
JWT_EXPIRY=3600

# CORS
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_MAX_AGE=3600
CORS_SUPPORTS_CREDENTIALS=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_STORAGE=file

# Cache
CACHE_DRIVER=file
CACHE_DEFAULT_TTL=3600

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=file

# Trusted Proxy Configuration
# Only add IPs you FULLY CONTROL (your reverse proxy, load balancer, CDN)
# Format: Comma-separated IPs or CIDR ranges
# Example: TRUSTED_PROXIES=192.168.1.1,10.0.0.0/8
TRUSTED_PROXIES=

# Which headers to trust from proxies
# Options: X_FORWARDED_FOR,X_FORWARDED_PROTO,X_FORWARDED_HOST,X_FORWARDED_PORT,FORWARDED
TRUSTED_PROXY_HEADERS=X_FORWARDED_FOR,X_FORWARDED_PROTO